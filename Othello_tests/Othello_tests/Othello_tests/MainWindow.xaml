<Window x:Class="Othello_tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello_tests"
        mc:Ignorable="d"
        x:Name="Board"
        Title="MainWindow" Height="500" Width="500">
    <Window.Background>
        <ImageBrush ImageSource="Resources/wooden_back.jpg"/>
    </Window.Background>
    <!-- GRID TEST -->
    <Grid x:Name="Board_grid" Height="400" Width="400"
          HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/reversi_board.png"/>
        </Grid.Background>
    </Grid>
</Window>
